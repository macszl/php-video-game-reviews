<div class="comment-session">
    {% for item in items %}
    <div class="post-comment">
        <div class="list-comment">
        <div class="user">
            <div class="user-meta">
                <div class="name">{{item.username}}</div>
                <div class="date">{{item.date}}</div>
            </div>
        </div>
        </div>
        <div class="comment-post">{{item.description}}</div>
    </div>
    {% endfor %}
    
    <div class="comment-box">
        <div class="user">
            <div class="name"> {{ loggedInUsername }}</div>
        </div>
            <form
                action="../scripts/comment_upload_script.php?id={{gameId}}"
                method="post"
            >
                <textarea
                    name="comment"
                    placeholder="Your comment"
                >
                </textarea> 
                <button name="comment-submit" class="comment-submit">Comment</button>
            </form>
        </div>
    </div>
</div>